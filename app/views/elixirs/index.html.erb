<div class="container mt-4">
  <h1>All Elixirs</h1>

  <div class="mb-4">
    <%= form_with url: elixirs_path, method: :get, local: true do %>
      <div class="input-group">
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search elixirs..." %>
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @elixirs.each do |elixir| %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to elixir.name, elixir %></h5>
            <p class="card-text">Difficulty: <%= elixir.difficulty %></p>
            <p class="card-text">Effect: <%= elixir.effect %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
